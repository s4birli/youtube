FROM node:18-alpine

WORKDIR /app

# Install build dependencies and tools
RUN apk add --no-cache python3 py3-pip ffmpeg git && \
    pip3 install yt-dlp

# Create necessary directories
RUN mkdir -p data/downloads && \
    chmod -R 777 data

COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose the port
EXPOSE 3001

# Start the app with hot reloading
CMD ["npm", "run", "dev"] 